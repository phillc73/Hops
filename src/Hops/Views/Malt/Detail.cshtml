@using Hops.Models;
@model Malt

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = $"{Model.Name} - Malts";
}

<div class="jumbotron">
    <span style="cursor: pointer;" class="malt-inv glyphicon glyphicon-star-empty pull-right btn btn-default hidden-print" aria-hidden="true" aria-label="star" data-malt-id="@Model.Id" onclick="save(this);"></span>

    <h1>@Model.Name</h1>
</div>

<div class="panel panel-default">
    <div class="panel-heading">Information</div>
    <div class="panel-body">
        <p>@Model.Description</p>     
        <p>
            <strong>Maltster:</strong> @(((MaltsterEnum)Model.Maltster).Wordify())<br/>
        </p>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">Brewing values</div>

    <table class="table table-striped">
        <tr><td style="padding-left:15px;">Colour <span class="glyphicon glyphicon-info-sign" 
                                 data-toggle="tooltip" 
                                 title="'European Brewing Convention'. In practice the EBC color is approximately 1.97 times the SRM color." />
            </td><td>@Model.EBC() EBC</td>
        </tr>
        <tr><td style="padding-left:15px;">Ratio <span class="glyphicon glyphicon-info-sign"
                                data-toggle="tooltip"
                                title="The max percentage this malt can be used up to of the grain bill" />
            </td><td>@Model.Ratio%</td>
        </tr>
    </table>
</div>

<div class="well hidden-print">
    <a href="mailto:hops@curleezme.nl?subject=Hops - Suggested edit - @Model.Name">Suggest an edit</a>
</div>

<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
    loadFromInventory();
});
</script>